<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <h1><span class="media_ranker">Media Ranker</span> | <span class="">Ranking the best of everything</span></h1>
    </header>
    <nav>
      <ul class="nav">
        <li class="nav-item">
          <%= link_to "View top media", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "View all media", works_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Add a new work", new_work_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%#= link_to "View all users", users_path %>
        </li>
        <li class="nav-item">
          <% if session[:user_id]%>
            <%= link_to "Logged in as #{User.find_by(id: session[:user_id]).name}", login_path, class: "nav-link" %>
          <% end %>
        </li>
        <li class="nav-item">
          <% if !session[:user_id]%>
            <%= link_to "Log in", login_path, class: "nav-link" %>
          <% else %>
            <%= link_to "Log out", logout_path, method: :post, class: "nav-link" %>
          <% end %>
        </li>

      </ul>
    </nav>

    <section class="flash-msg__section">
      <% flash.each do |name, message| %>
        <strong class="<%= name %>">
          <%= message %>
        </strong>
      <% end %>
    </section>
    
    <%= yield %>
  </body>
</html>
